<resources>
    <string name="app_name">libAlbumSelector</string>

    <color name="color_0000">#0000</color>
    <color name="color_99404040">#99404040</color>


    <style name="transparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_0000</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="albumTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_0000</item>
    </style>


    <declare-styleable name="CustomRecyclerView">

        <attr name="app_span_count" format="integer"></attr>
        <attr name="app_recycler_view_max_height" format="dimension"></attr>
        <attr name="app_item_divide_line_color" format="color" />
        <attr name="app_item_divide_line_size" format="dimension" />

        <attr name="app_item_margin" format="dimension" />
        <attr name="app_is_expanded" format="boolean" />
        <attr name="app_start_item_margin" format="dimension" />
        <attr name="app_end_item_margin" format="dimension" />


        <attr name="app_item_decoration_type" format="enum">
            <enum name="NONE" value="0"></enum>
            <enum name="ITEM_DIVIDE_LNE" value="1"></enum>
            <enum name="ITEM_SPACE" value="2"></enum>
        </attr>

        <attr name="app_layout_style" format="enum">
            <enum name="list_vertical" value="1"></enum>
            <enum name="list_horizontal" value="2"></enum>
            <enum name="grid_vertical" value="4"></enum>
            <enum name="grid_horizontal" value="8"></enum>
            <enum name="staggered_vertical" value="16"></enum>
            <enum name="staggered_horizontal" value="32"></enum>
            <enum name="other" value="256"></enum>
        </attr>


    </declare-styleable>

</resources>
