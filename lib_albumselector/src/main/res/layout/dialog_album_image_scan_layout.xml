<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <RelativeLayout
        android:id="@+id/dialog_top_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/dialog_back_ImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_click_circle_bg"
            android:padding="10dp"
            android:src="@drawable/album_ic_back" />

        <TextView
            android:id="@+id/dialog_title_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16dp"
            tools:text="标题标题标题"
            />


    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/dialog_image_scan_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dialog_top_title_layout" />

</RelativeLayout>